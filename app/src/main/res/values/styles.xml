<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blackGray</item>
        <item name="colorPrimaryDark">@color/blackGray</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/splash_background</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar"></style>

    <style name="DialogLightTheme" parent="DialogTheme">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ResultDialogWindowAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/result_dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/result_dialog_exit_anim</item>
    </style>

    <style name="ClearDialogWindowAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/clear_dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/clear_dialog_exit_anim</item>
    </style>

    <!--自定义switch的按钮和轨迹颜色theme-->
    <style name="mySwitch" parent="Theme.AppCompat.Light">
        <!-- switch 打开时的按钮的颜色 轨迹颜色默认为30%（看效果就明白30%是怎么回事了）这个颜色 -->
        <item name="colorControlActivated">@color/colorAccent</item>
        <!--  switch关闭时的按钮的颜色 -->
        <item name="colorSwitchThumbNormal">@color/colorGray</item>
        <!-- switch关闭时的轨迹的颜色 30%这个颜色 -->
        <!--<item name="android:colorForeground">@color/colorPrimaryDark</item>-->
    </style>
</resources>